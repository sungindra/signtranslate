<div class="col-md-4 offset-md-4 col-xs-10 offset-xs-1 box-shadow-3 p-0">
  <div class="card border-grey border-lighten-3 px-1 py-1 m-0">
    <div class="card-header no-border">
      <h1 class="text-xs-center">LOGIN</h1>
    </div>

  <div class="card-body collapse in">
    <div class="card-block">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group">
          <%= f.label :email, class: "form-control-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :password, class: "form-control-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log In", class: "btn btn-block btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
